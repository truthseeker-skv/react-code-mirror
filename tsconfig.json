{
  "compilerOptions": {
    "outDir": "lib/Editor",
    "module": "ESNext",
    "target": "ES5",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": ["./*.ts", "./**/*.ts", "./*.tsx", "./**/*.tsx"]
}
