{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "jsx": "react",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "rootDir": "src"
  },
  "include": ["./*.ts", "./**/*.ts", "./*.tsx", "./**/*.tsx"],
}
